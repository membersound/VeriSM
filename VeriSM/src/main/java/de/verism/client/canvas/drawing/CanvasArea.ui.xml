<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
	xmlns:gwt='urn:import:com.google.gwt.user.client.ui' xmlns:c='urn:import:com.google.gwt.canvas.client'>

	<ui:style>
		/* Show a border around the whole drawing area. */
		.scroll-area {
			border: 1px solid #25609C;
			display: block;
			border-radius: 5px; 
			-moz-border-radius: 5px;
		}
	</ui:style>
			
	<!-- The paintable canvas area. -->
	<gwt:ResizeLayoutPanel>
		<gwt:AbsolutePanel ui:field="absolutePanel" styleName='{style.scroll-area}'>
			<c:Canvas ui:field="canvas" />
		</gwt:AbsolutePanel>
	</gwt:ResizeLayoutPanel>

</ui:UiBinder>